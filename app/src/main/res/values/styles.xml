<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewMyTheme">

        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GoogleAuthSignInButton">
        <item name="android:background">@drawable/common_google_signin_btn_text_light</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="textAllCaps">true</item>
    </style>
    <!-- navigation view style customized-->
    <style name="NavigationViewStyle">
        <item name="listPreferredItemHeightSmall">80dp</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="NavigationColor">

        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/green</item>
        <item name="colorControlHighlight">@color/colorRed</item>
    </style>



</resources>
