<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/fromdate_button"
        android:text="02-05-2018"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/todate_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/fromdate_button"
            android:layout_marginStart="287dp"
            android:text="31-05-2018"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="287dp" />

        <Button
            android:id="@+id/ok_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/fromdate_button"
            android:layout_marginEnd="73dp"
            android:text="ok"
            tools:ignore="UnknownId"
            android:layout_alignParentRight="true"
            android:layout_marginRight="73dp" />
        <TextView
            android:id="@+id/text1_id"
            android:layout_below="@+id/ok_button"
            android:text="Bar Chart"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar"
            android:layout_below="@+id/text1_id"
            android:layout_marginTop="10dp"

            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="450dp">

        </com.github.mikephil.charting.charts.BarChart>


        <TextView
            android:id="@+id/text_id"
            android:layout_below="@+id/bar"
            android:text="Pie Chart"
            android:textSize="20sp"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_id"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text_id"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="450dp"></com.github.mikephil.charting.charts.PieChart>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/pie_id"></LinearLayout>
    </RelativeLayout>

</ScrollView>