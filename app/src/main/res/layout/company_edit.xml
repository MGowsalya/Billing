        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/company_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:textSize="15dp"
                android:backgroundTint="@color/Grey"
                android:hint="@string/company_name_hint" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/company_edit_address"
                android:layout_width="match_parent"
                android:fontFamily="@font/segoeui"
                android:textSize="15sp"
                android:backgroundTint="@color/Grey"
                android:layout_height="wrap_content"
                android:hint="@string/company_address_hint" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoeui"
            android:textSize="15sp"
            android:text="State" />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/company_edit_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="15sp"
            android:backgroundTint="@color/Grey"
            android:fontFamily="@font/segoeui"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/company_edit_postal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:inputType="number"
                android:textSize="15sp"
                android:backgroundTint="@color/Grey"
                android:maxLength="6"
                android:hint="@string/company_postal_hint" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/company_edit_gst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="15sp"
                android:backgroundTint="@color/Grey"
                android:digits="0123456789,qwertzuiopasdfghjklyxcvbnm"
                android:maxLength="15"
                android:fontFamily="@font/segoeui"
                android:hint="@string/company_Gst_hint" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/company_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="15sp"
                android:backgroundTint="@color/Grey"
                android:fontFamily="@font/segoeui"
                android:maxLength="11"
                android:hint="@string/company_phonenum_hint" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/company_edit_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="10"
                android:textSize="15sp"
                android:backgroundTint="@color/Grey"
                android:fontFamily="@font/segoeui"
                android:hint="@string/company_mobile_hint" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/company_edit_billpre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="15sp"
                android:backgroundTint="@color/Grey"
                android:fontFamily="@font/segoeui"
                android:hint="@string/company_bill_hint" />
        </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/edit_save"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorGreen"
                android:layout_gravity="center"
                android:text="@string/save"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="@font/segoeui"
                android:layout_marginBottom="20dp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />



    </LinearLayout>

</ScrollView>