<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollview"
    android:layout_marginBottom="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:layout_width="match_parent"
            android:id="@+id/item_select"
            android:layout_marginLeft="13dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Grey"
            android:hint="Item Name"
            android:fontFamily="@font/segoeui"
            android:textSize="15sp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"/>


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Details"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/segoeui"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <EditText
                android:id="@+id/item_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:backgroundTint="@color/Grey"
                android:fontFamily="@font/segoeui"
                android:singleLine="true"
                android:hint="@string/item_name_hint" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Name"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/segoeui"/>
        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/item_category_edit_spinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/segoeui"
            android:backgroundTint="@color/Grey"
            android:layout_marginTop="1dp"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Type"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/segoeui"/>
        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/itemetype_edit_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:backgroundTint="@color/Grey"
            android:fontFamily="@font/segoeui"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/item_edit_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:fontFamily="@font/segoeui"
                android:backgroundTint="@color/Grey"
                android:textSize="15sp"
                android:hint="Rate" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
            android:id="@+id/tax_edit_textview"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:hint="Tax"
            android:layout_weight="1"
            android:fontFamily="@font/segoeui"
            android:backgroundTint="@color/Grey"
            android:textSize="15sp"
            />

            <ImageButton
                android:layout_weight="1"
                android:id="@+id/tax_spin_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="13dp"
                android:layout_gravity="right"
                android:background="@null"
                android:src="@drawable/down_arrow" />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/item_edit_hsc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="15sp"
                android:backgroundTint="@color/Grey"
                android:fontFamily="@font/segoeui"
                android:hint="@string/item_hsc_hint" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favourite"
                android:checked="false"
                android:fontFamily="@font/segoeui"
                android:id="@+id/item_edit_favourite"
                android:layout_gravity="start"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/segoeui"
                android:text="Status :"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/enable_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/segoeui"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="2dp"
            >

            <Button
                android:id="@+id/item_edit_save"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="1dp"
                android:textAllCaps="false"
                android:background="@color/colorGreen"
                android:text="@string/save" />

            <Button
                android:id="@+id/item_edit_enable"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="1dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/segoeui"
                android:background="@color/colorRed"
                android:text="@string/disable" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"></LinearLayout>

